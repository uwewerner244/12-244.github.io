{
    "manifest_version": 3
  , "name": "CV+Portfolio"
  , "short_name": "cv"
  , "version": "{{engine.version}}"
  , "version_name": "v{{version}}-b{{cntr}}"
  , "default_locale": "en"
  , "description": "Modern CV, Resume and Portfolio"
  , "icons": [
      {
          "src":    "favicon.ico"
        , "sizes":  "32x32 24x24 16x16"
        , "type":   "image/x-icon"
      }
    ]
  , "author":           "{{author.name.full}}"
  , "scope":            "/"
  , "start_url":        "/?utm_source=start_url"
  , "display":          "standalone"
  , "theme_color":      "#000"
  , "background_color": "#fff"
}
